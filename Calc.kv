<MyButton@Button>:
    font_size: '20sp'
    background_color: (106 / 255, 90 / 255, 205 / 255, 0.6)

<Container>:
    rows: 6
    id: calculator
    display: entry

    BoxLayout:
        orientation: 'vertical'


        TextInput:
            id: entry
            text: ""
            size_hint: 1, 0.25
            font_size: '32sp'
            multiline: False
            input_filter: 'int'
            input_type: 'number'
            halign: "left"

        GridLayout:
            rows : 4
            size_hint: 1, 1
            row_default_height : 80

            MyButton:
                text: "7"
                on_press: entry.text += self.text
            MyButton:
                text: "8"
                on_press: entry.text += self.text
            MyButton:
                text: "9"
                on_press: entry.text += self.text
            MyButton:
                text: "*"
                on_press: entry.text += self.text
            MyButton:
                text: "4"
                on_press: entry.text += self.text
            MyButton:
                text: "5"
                on_press: entry.text += self.text
            MyButton:
                text: "6"
                on_press: entry.text += self.text
            MyButton:
                text: "/"
                on_press: entry.text += self.text
            MyButton:
                text: "1"
                on_press: entry.text += self.text
            MyButton:
                text: "2"
                on_press: entry.text += self.text
            MyButton:
                text: "3"
                on_press: entry.text += self.text
            MyButton:
                text: "-"
                on_press: entry.text += self.text
            MyButton:
                text: "0"

                on_press: entry.text += self.text
            MyButton:
                text: "."
                on_press: root.dot()
            MyButton:
                text: "AC"
                on_press: root.clear()
            MyButton:
                text: "+"
                on_release: entry.text += self.text

    BoxLayout:
        MDRectangleFlatButton:
            text: "="
            font_size: '28sp'
            md_bg_color: 0.35, 0.3, 0.5, 0.8
            text_color: 1, 1, 1, 1

            size_hint: 1, 0.28
            on_press: calculator.calculate(entry.text)